<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:padding="8dp">

    <!-- Profile Image -->
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivUserProfile"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:scaleType="centerCrop"
        android:src="@drawable/icon_account"
        android:background="@drawable/item_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <!-- Online Status Dot -->
    <ImageView
        android:id="@+id/ivUserStatus"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:background="@drawable/dot_gray"
        app:layout_constraintBottom_toBottomOf="@id/ivUserProfile"
        app:layout_constraintEnd_toEndOf="@id/ivUserProfile" />

    <!-- Name -->
    <TextView
        android:id="@+id/tvUserName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="User Name"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintStart_toEndOf="@id/ivUserProfile"
        app:layout_constraintTop_toTopOf="@id/ivUserProfile"
        app:layout_constraintEnd_toStartOf="@id/imgCall"
        app:layout_constraintHorizontal_bias="0"
        android:layout_marginStart="12dp"/>

    <!-- Mobile Number -->
    <TextView
        android:id="@+id/tvUserMobile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="1234567890"
        android:textSize="14sp"
        android:textColor="#777777"
        android:maxLines="1"
        app:layout_constraintStart_toStartOf="@id/tvUserName"
        app:layout_constraintTop_toBottomOf="@id/tvUserName"
        app:layout_constraintEnd_toStartOf="@id/imgCall" />

    <!-- Call Icon -->
    <ImageView
        android:id="@+id/imgCall"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/icon_call"
        android:contentDescription="Call Icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="12dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
