<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/settingRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <!-- Toolbar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar_calls"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#075E54"
        android:elevation="4dp"
        app:title="Settings"
        app:titleTextColor="@android:color/white"
        app:menu="@menu/setting_menu"
        app:navigationIcon="@null" />

    <!-- Profile section -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="2dp"
        android:padding="12dp"
        android:layout_margin="12dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="100sp"
            android:background="@color/white"
            android:outlineAmbientShadowColor="#D3D3D3">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profileImage"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="8sp"
                android:src="@drawable/icon_account"
                app:civ_border_width="2dp"
                app:civ_border_color="@android:color/darker_gray"
                android:layout_marginEnd="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/tvName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="User Name"
                android:textSize="18sp"
                android:layout_marginLeft="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/profileImage"
                app:layout_constraintEnd_toStartOf="@id/qrIcon"
                app:layout_constraintTop_toTopOf="@id/profileImage"/>

            <TextView
                android:id="@+id/tvPhone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="+91-1234567890"
                android:textColor="#888888"
                app:layout_constraintStart_toStartOf="@id/tvName"
                app:layout_constraintTop_toBottomOf="@id/tvName"/>
            <!-- Constraint fixes in QR and Edit icons only -->
            <ImageView
                android:id="@+id/qrIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/icon_qr_code"
                app:layout_constraintTop_toTopOf="@id/tvName"
                app:layout_constraintBottom_toBottomOf="@id/tvName"
                app:layout_constraintEnd_toStartOf="@id/editIcon"
                android:layout_marginEnd="8dp" />

            <ImageView
                android:id="@+id/editIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/icon_edit"
                app:layout_constraintTop_toTopOf="@id/qrIcon"
                app:layout_constraintBottom_toBottomOf="@id/qrIcon"
                app:layout_constraintEnd_toEndOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>


    <!-- RecyclerView for searchable items -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/settingsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="12dp"
        android:clipToPadding="false" />

